<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:layout_gravity="center_vertical"
    tools:context="edwin.team.com.photoclient.Fragments.UserDashboardFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <Button
            android:layout_width="240dp"
            android:layout_height="200dp"
            android:text="Photographer toggle"
            android:layout_marginRight="75dp"
            android:textColor="@color/White"
            android:fontFamily="sans-serif-medium"
            android:textStyle="bold"
            android:background="@drawable/flat_button_background"
            android:drawableTop="@drawable/switchoff"
            android:drawablePadding="-35dp"
            android:onClick="btnToggle"/>
        <Button
            android:layout_width="240dp"
            android:layout_height="200dp"
            android:text="Bestellingen bekijken"
            android:textColor="@color/White"
            android:fontFamily="sans-serif-medium"
            android:textStyle="bold"
            android:background="@drawable/flat_button_background"
            android:drawableTop="@drawable/purchaseorder"
            android:drawablePadding="-35dp"
            android:onClick="btnCheckOrders"/>

        </LinearLayout>
</FrameLayout>
