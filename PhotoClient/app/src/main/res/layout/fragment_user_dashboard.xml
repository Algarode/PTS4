<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context="edwin.team.com.photoclient.Fragments.UserDashboardFragment">

    <Button
        android:layout_width="240dp"
        android:layout_height="200dp"
        android:text="Pas gegevens aan"
        android:textColor="@color/White"
        android:fontFamily="sans-serif-medium"
        android:textStyle="bold"
        android:background="@drawable/flat_button_background"
        android:layout_gravity="left|top"
        android:drawableTop="@drawable/editor"
        android:drawablePadding="-35dp"
        android:onClick="btnEdit"/>

    <Button
        android:layout_width="240dp"
        android:layout_height="200dp"
        android:text="Foto's editen"
        android:textColor="@color/White"
        android:fontFamily="sans-serif-medium"
        android:textStyle="bold"
        android:background="@drawable/flat_button_background"
        android:layout_gravity="right|top"
        android:drawableTop="@drawable/adobephotoshop"
        android:drawablePadding="-35dp"
        android:onClick="btnEditPic"/>

    <Button
        android:layout_width="240dp"
        android:layout_height="200dp"
        android:text="Foto's op product"
        android:textColor="@color/White"
        android:fontFamily="sans-serif-medium"
        android:textStyle="bold"
        android:background="@drawable/flat_button_background"
        android:layout_gravity="left|bottom"
        android:drawableTop="@drawable/imageonproduct"
        android:drawablePadding="-35dp"
        android:onClick="btnProductOnImages"/>

    <Button
        android:layout_width="240dp"
        android:layout_height="200dp"
        android:text="Foto's bestellen"
        android:textColor="@color/White"
        android:fontFamily="sans-serif-medium"
        android:textStyle="bold"
        android:background="@drawable/flat_button_background"
        android:layout_gravity="center_horizontal|bottom"
        android:drawableTop="@drawable/salesorder"
        android:drawablePadding="-35dp"
        android:onClick="btnGoToShoppingcart"/>

    <Button
        android:layout_width="240dp"
        android:layout_height="200dp"
        android:text="Bekijk collectie"
        android:textColor="@color/White"
        android:fontFamily="sans-serif-medium"
        android:textStyle="bold"
        android:background="@drawable/flat_button_background"
        android:layout_gravity="center_horizontal|top"
        android:drawableTop="@drawable/images"
        android:drawablePadding="-35dp"
        android:onClick="btnUserCollection"/>

    <Button
        android:layout_width="240dp"
        android:layout_height="200dp"
        android:onClick="btnOnCode"
        android:text="Code invoeren"
        android:textColor="@color/White"
        android:fontFamily="sans-serif-medium"
        android:textStyle="bold"
        android:background="@drawable/flat_button_background"
        android:layout_gravity="right|bottom"
        android:drawableTop="@drawable/barcode"
        android:drawablePadding="-35dp"/>
</FrameLayout>
