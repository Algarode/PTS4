<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/WhiteSmoke">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="9"
        android:paddingTop="10dp"
        android:background="@drawable/actionbar_background"
        android:orientation="horizontal">
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/li_photo"
            android:paddingTop="10dp"
            android:paddingLeft="60dp"
            android:textSize="20sp"
            android:text="@string/shopping_cart"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:layout_toRightOf="@id/li_photo">
            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="@string/name"
                android:layout_marginLeft="30dp"
                android:id="@+id/_name"
                />
            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginLeft="30dp"
                android:text="@string/measure"
                android:id="@+id/_measure"
                android:layout_toRightOf="@id/_name"
                />
            <TextView
                android:text="@string/amount"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@id/_measure"
                android:id="@+id/_amount"/>
            <TextView
                android:text="@string/piece_price"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@id/_amount"
                android:id="@+id/_pieceprice"/>
            <TextView
                android:text="@string/total_price"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@id/_pieceprice"
                android:id="@+id/_totalprice"/>
        </LinearLayout>
    </RelativeLayout>
    <ListView
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listview_shop"
        style="@style/ListView"
        >
    </ListView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="8">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:text="@string/place_order"
            android:layout_margin="30dp"
            android:padding="5dp"
            android:background="@drawable/actionbar_background"
            android:textColor="@color/White"
            android:textSize="30sp"
            android:onClick="submitOrder"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        android:layout_marginRight="130dp"
        android:layout_weight="5"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="8"
        android:text="@string/sub_total"
        android:textSize="20sp"
        android:layout_gravity="right"
        android:id="@+id/shoppingcart_textview_sub"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="8"
        android:text="@string/tax"
        android:textSize="20sp"
        android:layout_gravity="right"
        android:id="@+id/shoppingcart_textview_btw"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="8"
        android:text="@string/total"
        android:textSize="20sp"
        android:layout_gravity="right"
        android:id="@+id/shoppingcart_textview_total"
        />
    </LinearLayout>
    </LinearLayout>
</LinearLayout>
