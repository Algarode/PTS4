<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/mainBackground">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="9"
        android:paddingTop="10dp"
        android:background="@drawable/actionbar_background"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="10dp">
            <TextView style="@style/tableHeader"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/name"
                android:layout_marginLeft="190dp"
                android:id="@+id/_name"
                />
            <TextView style="@style/tableHeader"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="@string/measure"
                android:id="@+id/_measure"
                android:layout_toRightOf="@id/_name"
                />
            <TextView style="@style/tableHeader"
                android:text="@string/amount"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@id/_measure"
                android:id="@+id/_amount"/>
            <TextView style="@style/tableHeader"
                android:text="@string/piece_price"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@id/_amount"
                android:id="@+id/_pieceprice"/>
            <TextView style="@style/tableHeader"
                android:text="@string/total_price"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@id/_pieceprice"
                android:id="@+id/_totalprice"/>
            />
        </LinearLayout>
    </RelativeLayout>
    <ListView
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listview_shop"
        style="@style/ListView"
        >
    </ListView>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:layout_weight="8">
        <Button
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            android:layout_height="80dp"
            android:layout_weight="5"
            android:text="@string/place_order"
            android:background="@drawable/actionbar_background"
            android:textColor="@color/White"
            android:textSize="30sp"
            android:onClick="submitOrder"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:layout_weight="5"
        android:layout_marginRight="80dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sub_total"
            android:textSize="20sp"
            android:id="@+id/shoppingcart_textview_sub"
            android:textColor="@color/Black"
            android:fontFamily="sans-serif-medium"
            android:textStyle="bold"
            android:layout_gravity="right"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tax"
            android:textColor="@color/Black"
            android:fontFamily="sans-serif-medium"
            android:textStyle="bold"
            android:textSize="20sp"
            android:id="@+id/shoppingcart_textview_btw"
            android:layout_gravity="right"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/total"
            android:textSize="20sp"
            android:id="@+id/shoppingcart_textview_total"
            android:textColor="@color/Black"
            android:fontFamily="sans-serif-medium"
            android:textStyle="bold"
            android:layout_gravity="right"
            />
    </LinearLayout>
    </LinearLayout>
</LinearLayout>
